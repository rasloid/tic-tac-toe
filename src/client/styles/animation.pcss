.fade-enter {
    opacity: 0.01;
}

.fade-enter.fade-enter-active {
    opacity: 1;
    transition: opacity 400ms ease-out;
}

.fade-exit {
    opacity: 1;
}

.fade-exit.fade-exit-active {
    opacity: 0.01;
    transition: opacity 400ms ease-out;
}


.greeting {
    padding: 20px;
    background-color: #ccc;
    width: 200px;
    margin: auto;
    text-align: center;
    border-radius: 4px;
}